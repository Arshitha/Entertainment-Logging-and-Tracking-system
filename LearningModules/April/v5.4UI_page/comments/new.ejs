<% include ../partials/header %>
<body background="/assets/images/mbr-1-1620x1080.jpg" >
<div class="container" style="padding-top: 124px; padding-bottom: 93px;">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= movie.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/movies/<%= movie._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

