<% include ../partials/header %>

<section class="engine"><a href=""></a></section><section class="mbr-section mbr-section--relative mbr-section--fixed-size mbr-parallax-background mbr-after-navbar" id="features1-o" data-rv-view="206" style="background-image: url(assets/images/mbr-1624x1080.jpg);">
    <div class="mbr-overlay" style="opacity: 0.5; background-color: rgb(255, 255, 255);"></div>
    
    <div class="mbr-section__container container mbr-section__container--std-top-padding" style="padding-top: 93px;">
        <div class="mbr-section__row row">
          <% populars["results"].forEach(function(movie) { %>
         
            <div class="mbr-section__col col-xs-12 col-md-3 col-sm-6">
                <div class="mbr-section__container mbr-section__container--center mbr-section__container--middle">
                    <figure class="mbr-figure"><img src=" https://image.tmdb.org/t/p/w500/<%= movie["poster_path"] %> " hight= "300" width="150" class="mbr-figure__img"></figure>
                </div>
                <div class="mbr-section__container mbr-section__container--middle">
                    <div class="mbr-header mbr-header--reduce mbr-header--center mbr-header--wysiwyg">
                        <h3 class="mbr-header__text"><%= movie["title"] %></h3>
                    </div>
                    <div class="mbr-header mbr-header--reduce mbr-header--center mbr-header--wysiwyg">
                        <h4 class="mbr-header__text">Vote:<%= movie["vote_average"] %></h4>
                    </div>
                </div>
                <div class="mbr-section__container mbr-section__container--middle">
                    <div class="mbr-article mbr-article--wysiwyg">
                        <p><%=movie["overview"]%><br><br></p>
                    </div>
                </div>
                 
            </div>
            
            <% }) %>
        </div>
    </div>
    
</section>


  <% include ../partials/footer %>